    "class ModelTrainer:\n",
    "    def __init__(self):\n",
    "        self.models = {}\n",
    "        self.results = {}\n",
    "    \n",
    "    def train_buy_level_predictor(self, X_train, y_train, X_test, y_test):\n",
    "        print(\"\\n" + \"="*60)\n",
    "        print(\"訓練模型 1: 買入點位預測 (迴歸)\")\n",
    "        print(\"="*60)\n",
    "        \n",
    "        models = {\n",
    "            'Random Forest': RandomForestRegressor(n_estimators=100, max_depth=15, n_jobs=-1),\n",
    "            'Gradient Boosting': GradientBoostingRegressor(n_estimators=100, learning_rate=0.1, max_depth=5)\n",
    "        }\n",
    "        \n",
    "        best_model = None\n",
    "        best_r2 = -np.inf\n",
    "        \n",
    "        for name, model in models.items():\n",
    "            print(f\"\\n  訓練 {name}...\")\n",
    "            model.fit(X_train, y_train)\n",
    "            test_r2 = model.score(X_test, y_test)\n",
    "            test_mae = mean_absolute_error(y_test, model.predict(X_test))\n",
    "            print(f\"    測試 R²: {test_r2:.4f}, MAE: {test_mae:.8f}\")\n",
    "            if test_r2 > best_r2:\n",
    "                best_r2 = test_r2\n",
    "                best_model = model\n",
    "                best_name = name\n",
    "        \n",
    "        print(f\"\\n  ✓ 最佳模型: {best_name} (R²: {best_r2:.4f})\")\n",
    "        self.models['buy_level'] = best_model\n",
    "        self.results['buy_level'] = {'model': best_name, 'r2': best_r2}\n",
    "        return best_model\n",
    "    \n",
    "    def train_sell_level_predictor(self, X_train, y_train, X_test, y_test):\n",
    "        print(\"\\n" + \"="*60)\n",
    "        print(\"訓練模型 2: 賣出點位預測 (迴歸)\")\n",
    "        print(\"="*60)\n",
    "        \n",
    "        models = {\n",
    "            'Random Forest': RandomForestRegressor(n_estimators=100, max_depth=15, n_jobs=-1),\n",
    "            'Gradient Boosting': GradientBoostingRegressor(n_estimators=100, learning_rate=0.1, max_depth=5)\n",
    "        }\n",
    "        \n",
    "        best_model = None\n",
    "        best_r2 = -np.inf\n",
    "        \n",
    "        for name, model in models.items():\n",
    "            print(f\"\\n  訓練 {name}...\")\n",
    "            model.fit(X_train, y_train)\n",
    "            test_r2 = model.score(X_test, y_test)\n",
    "            test_mae = mean_absolute_error(y_test, model.predict(X_test))\n",
    "            print(f\"    測試 R²: {test_r2:.4f}, MAE: {test_mae:.8f}\")\n",
    "            if test_r2 > best_r2:\n",
    "                best_r2 = test_r2\n",
    "                best_model = model\n",
    "                best_name = name\n",
    "        \n",
    "        print(f\"\\n  ✓ 最佳模型: {best_name} (R²: {best_r2:.4f})\")\n",
    "        self.models['sell_level'] = best_model\n",
    "        self.results['sell_level'] = {'model': best_name, 'r2': best_r2}\n",
    "        return best_model\n",
    "    \n",
    "    def train_profit_classifier(self, X_train, y_train, X_test, y_test):\n",
    "        print(\"\\n" + \"="*60)\n",
    "        print(\"訓練模型 3: 盈利機會判定 (分類)\")\n",
    "        print(\"="*60)\n",
    "        \n",
    "        models = {\n",
    "            'Random Forest': RandomForestClassifier(n_estimators=100, max_depth=10, n_jobs=-1),\n",
    "            'Logistic Regression': LogisticRegression(max_iter=1000)\n",
    "        }\n",
    "        \n",
    "        best_model = None\n",
    "        best_acc = 0\n",
    "        \n",
    "        for name, model in models.items():\n",
    "            print(f\"\\n  訓練 {name}...\")\n",
    "            model.fit(X_train, y_train)\n",
    "            test_acc = model.score(X_test, y_test)\n",
    "            print(f\"    準確率: {test_acc:.4f}\")\n",
    "            if test_acc > best_acc:\n",
    "                best_acc = test_acc\n",
    "                best_model = model\n",
    "                best_name = name\n",
    "        \n",
    "        print(f\"\\n  ✓ 最佳模型: {best_name} (準確率: {best_acc:.4f})\")\n",
    "        self.models['profit_classifier'] = best_model\n",
    "        self.results['profit_classifier'] = {'model': best_name, 'accuracy': best_acc}\n",
    "        return best_model\n",
    "\n",
    "print('✓ ModelTrainer 類定義完成')"
