    "class PredictionEngine:\n",
    "    \"\"\"實時預測引擎和回測系統\"\"\"\n",
    "    \n",
    "    def __init__(self, trainer, feature_cols, scaler):\n",
    "        self.trainer = trainer\n",
    "        self.feature_cols = feature_cols\n",
    "        self.scaler = scaler\n",
    "    \n",
    "    def predict_signal(self, features_dict):\n",
    "        \"\"\"對單個時刻的特徵進行預測\"\"\"\n",
    "        feature_vector = np.array([features_dict.get(col, 0) for col in self.feature_cols]).reshape(1, -1)\n",
    "        feature_vector = self.scaler.transform(feature_vector)\n",
    "        \n",
    "        prediction = {\n",
    "            'buy_level': self.trainer.models['buy_level'].predict(feature_vector)[0],\n",
    "            'sell_level': self.trainer.models['sell_level'].predict(feature_vector)[0],\n",
    "            'profit_probability': self.trainer.models['profit_classifier'].predict_proba(feature_vector)[0][1]\n",
    "        }\n",
    "        \n",
    "        return prediction\n",
    "    \n",
    "    def backtest(self, data, predictions):\n",
    "        \"\"\"對預測結果進行回測\"\"\"\n",
    "        results = []\n",
    "        \n",
    "        for idx in range(len(data) - 3):\n",
    "            current_price = data.iloc[idx]['close']\n",
    "            buy_pred = predictions[idx]['buy_level']\n",
    "            sell_pred = predictions[idx]['sell_level']\n",
    "            \n",
    "            # 查看未來 3 根 K 線\n",
    "            future_low = data.iloc[idx+1:idx+4]['low'].min()\n",
    "            future_high = data.iloc[idx+1:idx+4]['high'].max()\n",
    "            \n",
    "            # 判斷預測是否準確\n",
    "            buy_hit = future_low <= buy_pred <= future_high\n",
    "            sell_hit = future_low <= sell_pred <= future_high\n",
    "            \n",
    "            # 計算若按預測點位交易的收益\n",
    "            if buy_hit and sell_hit:\n",
    "                profit_pct = (sell_pred - buy_pred) / buy_pred * 100\n",
    "                result = 'SUCCESS'\n",
    "            elif buy_hit:\n",
    "                profit_pct = (future_high - buy_pred) / buy_pred * 100\n",
    "                result = 'PARTIAL'\n",
    "            else:\n",
    "                profit_pct = 0\n",
    "                result = 'FAILED'\n",
    "            \n",
    "            results.append({\n",
    "                'timestamp': data.index[idx],\n",
    "                'current_price': current_price,\n",
    "                'pred_buy': buy_pred,\n",
    "                'pred_sell': sell_pred,\n",
    "                'actual_low': future_low,\n",
    "                'actual_high': future_high,\n",
    "                'buy_hit': buy_hit,\n",
    "                'sell_hit': sell_hit,\n",
    "                'profit_pct': profit_pct,\n",
    "                'result': result\n",
    "            })\n",
    "        \n",
    "        return pd.DataFrame(results)\n",
    "\n",
    "print('✓ PredictionEngine 類定義完成')"
   ]
